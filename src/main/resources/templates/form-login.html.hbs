<body>
    <div id="login">
        <h5 class="text-center text-danger pt-5 font-italic  "> {{error}} </h5>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                    
                        <form name="login" id="login-form" class="form" action="/login" method="POST">
                        
                            <h3 class="text-center text-info">GeSoc</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Usuarie:</label><br>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Usuarie">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña">
                            </div>
                            <div class="form-group">
                      	      <input  name="submit" class="btn btn-info btn-md" type="submit" value="Ingresar">
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
